{
  "expo": {
    "name": "manofit",
    "slug": "manofit",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "permissions": {
        "notifications": {
          "allowAlert": true,
          "allowBadge": true,
          "allowSound": true
        }
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": ["NOTIFICATIONS", "SYSTEM_ALERT_WINDOW", "WAKE_LOCK"]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    }
  }
}
